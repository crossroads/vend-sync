#!/usr/bin/env ruby

if ARGV.length < 3
  puts 'Usage: vend-sync address username password [database=vend_sync]'
  exit
end

address = ARGV[0]
username = ARGV[1]
password = ARGV[2]
database = ARGV[3] || 'vend_sync'

require 'vend/sync'
Vend::Sync::Database.connect(database)
Vend::Sync::Import.new(address, username, password).import